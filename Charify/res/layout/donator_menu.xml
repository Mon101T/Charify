<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/white_background">

    <!-- Header Section with Notification Icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerSection"/>

    <!-- App Title -->
    <ImageView
        android:id="@+id/charify_word"
        android:layout_width="232dp"
        android:layout_height="104dp"
        android:layout_marginTop="-22dp"
        android:contentDescription="Charify Word Logo"
        android:elevation="0dp"
        android:src="@drawable/charify_two"/>

    <!-- User Greeting -->
    <TextView
        android:id="@+id/userGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO, PIO"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/charify_word"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nats"/>

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search"
        android:iconifiedByDefault="false"
        android:layout_below="@id/userGreeting"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/search_bar_style"/>

    <!-- Categories Title -->
    <TextView
        android:id="@+id/categoriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORIES"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/searchView"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nats"/>

    <GridLayout
        android:id="@+id/categoriesGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesTitle"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:rowCount="3">

        <!-- Health Category -->
        <FrameLayout
            android:id="@+id/healthCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5CCE61">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_health"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HEALTH"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Education Category -->
        <FrameLayout
            android:id="@+id/educationCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5CCE61">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_education"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDUCATION"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Nature Category -->
        <FrameLayout
            android:id="@+id/natureCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5CCE61">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_nature"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NATURE"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Animal Category -->
        <FrameLayout
            android:id="@+id/animalCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5CCE61">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_animal"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANIMAL"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Memorial Category -->
        <FrameLayout
            android:id="@+id/memorialCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5CCE61">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_memorial"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEMORIAL"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Nonprofit Category -->
        <FrameLayout
            android:id="@+id/nonprofitCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5CCE61">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_nonprofit"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NONPROFIT"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- More Button -->
        <FrameLayout
            android:id="@+id/moreCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5CCE61">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MORE"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>
    </GridLayout>

    <LinearLayout
        android:id="@+id/bottomItemsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:weightSum="5"
        android:gravity="center">

        <ImageButton
            android:id="@+id/squareItem1"
            style="@style/BottomSquareItem"/>

        <ImageButton
            android:id="@+id/squareItem2"
            style="@style/BottomSquareItem"/>

        <ImageButton
            android:id="@+id/squareItem3"
            style="@style/BottomSquareItem"/>

        <ImageButton
            android:id="@+id/squareItem4"
            style="@style/BottomSquareItem"/>

        <ImageButton
            android:id="@+id/squareItem5"
            style="@style/BottomSquareItem"/>

    </LinearLayout>

</RelativeLayout>
