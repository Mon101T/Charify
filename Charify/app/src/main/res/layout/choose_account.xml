<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_background"
        android:contentDescription="@null" />


    <!-- Foreground Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="24dp">


        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="283dp"
            android:layout_height="67dp"
            android:layout_gravity="start"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nats"
            android:gravity="left"
            android:text="REGISTER IN"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:src="@drawable/charify_two"
            android:layout_marginTop="-60dp"
            android:layout_marginStart="60dp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Top content here (REGISTER IN, Image, etc.) -->

            <!-- This invisible view pushes the bottom layout down -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Bottom Button Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/solo_account_button"
                    android:layout_width="315dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#5CCE61"
                    android:radius="18dp"
                    android:shape="rectangle"
                    android:text="SOLO ACCOUNT"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/org_account_button"
                    android:layout_width="284dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#5CCE61"
                    android:text="ORGANIZATION ACCOUNT"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/back_button"
                    android:text="BACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>
